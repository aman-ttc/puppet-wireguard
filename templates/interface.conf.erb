# This file is managed by puppet
[Interface]
<%- if @address -%>
  <%- if @address.is_a? Array -%>
    <%- @address.flatten.each do |adr| -%>
Address = <%= adr %>
    <%- end -%>
  <%- else -%>
Address = <%= @address %>
  <%- end -%>
<%- end -%>
<% if @saveconfig -%>
SaveConfig = true
<% end -%>
PrivateKey = <%= @private_key %>
ListenPort = <%= @listen_port %>
<%- if @preup -%>
PreUp = <%= @preup %>
<%- end -%>
<%- if @postup -%>
PostUp = <%= @postup %>
<%- end -%>
<%- if @predown -%>
PreDown = <%= @predown %>
<%- end -%>
<%- if @postdown -%>
PostDown = <%= @postdown %>
<%- end -%>
<%- if @peers -%>

# Peers
    <%- @peers.each do |peer| -%>
[Peer]
        <%- peer.each do |key,value| -%>
          <%- if key == 'Comment' -%>
# <%= value %>
          <%- else -%>
<%= key %> = <%= value %>
          <%- end -%>
        <%- end %>
    <%- end -%>
<%- end -%>
